            .blockTitle {
                display: block;
                width: 98%;
                height: 25px;
                background-color: orange;
                color: #000;
                font-size: 20px;
                padding: 5px;
                margin: 1px;
            }
            .blockAmountInTitle {
                display: block;
                width: 98%;
                height: auto;
