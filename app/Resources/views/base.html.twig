        <script type="text/javascript">
            $(document).ready(function()
            {
                $('.order_link').click(function() {
                    order.getItems();

                    $.fancybox({
                        padding: 10,
                        cyclic: false,
                        overlayShow: true,
                        overlayOpacity: 0.65,
                        overlayColor: '#000000',
                        'href' : '#order_from'
                    });
                });

                order.setUrl('{{ path('_ajax_oder_pizza') }}');
                order.setUrlGetItems('{{ path('_ajax_get_pizzas') }}');
                order.setUrlRemoveItem('{{ path('_ajax_remove_item') }}');
            });
        </script>
