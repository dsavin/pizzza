{% extends "MainBundle:PageLayout:base_admin.html.twig" %}
{% block javascripts %}
{% endblock %}
{%- set chain = current_chain()-%}
{% block body %}
    <h3>Добавление пиццы в сети пиццерий - {{ chain.name }}</h3>

    <form action="{{ path('admin_item_new', { 'chain_id': chain.id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button type="submit" class="btn btn-success">Добавить</button>
        </p>
    </form>
    <div>
        <a href="{{ path_city('admin_item',{'chain_id':chain.id}) }}" class="btn btn-info">К списку</a>
    </div>
{% endblock %}