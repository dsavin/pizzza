{% extends "MainBundle:PageLayout:base_admin.html.twig" %}
{% block javascripts %}
{% endblock %}
{%- set chain = current_chain()-%}
{% block body %}
    <h3>Список Пицц в {{ chain.getName }}</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>
                    <div>
                        <a class="btn btn-primary" href="{{ path_city('admin_item_new',{'chain_id':chain.getId, '_locale':'ru'}) }}">Добавить</a>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>
                    <div>
                        <a href="{{ path_city('admin_item_edit', { 'id': entity.id, 'chain_id':chain.getId }) }}" class="btn"><i class="icon-edit"></i></a>
                        <a target="_blank" href="{{ path_city('_item_single', { 'chain_url': chain.url, 'item_url': entity.url }) }}" class="btn"><i class="icon-eye-open"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}