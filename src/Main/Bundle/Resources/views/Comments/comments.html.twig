                        }, "json")
                        .done(function(data){
                            if (data.success) {
                                name.parent().html(args.name);
                                email.parent().html(args.email);
                                date.parent().html(args.date);
                                rating.parent().html(args.rating);
                                text.parent().html(args.text);
                            }
                        });

                return false;*/

            }
        }
        var comment = new commentController();
    </script>
{% endblock %}