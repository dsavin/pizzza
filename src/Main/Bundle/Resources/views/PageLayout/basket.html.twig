<div style="display: none;">
    <form action="/ajax/pizza/order/" method="post" class="clearfix" id="order_from">
        <section class="blockR">
            <div class="clearfix">
                <p>Контактная информация</p>
                <label for="name">Ваше имя <span class="attn">*</span></label>
                <fieldset>
                    <div class="input">
                        <input id="name_order" type="text" name="name" value="">
                    </div>
                </fieldset>
                <label for="phone">Телефон <span class="attn">*</span></label>
                <fieldset>
                    <div class="input">
                        <input id="phone_order" type="text" name="phone" value="" data-pattern="^0(50|63|66|67|68|91|93|94|95|97|98|99)\d{7}$">
                    </div>
                </fieldset>
                <fieldset>
                    <input type="checkbox" name="agreement" checked="checked"><a target="_blank" href="{{ path('_page_agreement') }}">Я принимаю условия Соглашения</a>
                </fieldset>
                <div class="ord"><input type="submit" value="Отправить заказ" onclick="return order.submitOrder();"></div>
            </div>
        </section>
        <div id="btn_form">
            <div class="amount">
                <p style="float: left;"><strong>Сумма заказа:</strong> <strong id="cost">0</strong><span> грн</span></p>
                <p id="discount_in_order" style="display: none;"><span id="form_dicount"></span> К оплате <strong id="cost_new">0</strong><span> грн</span></p>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
    $(document).ready(function()
    {
        $('.order_link').click(function() {
            order.getItems();
        });

        $('#popup-order-close').click(function(){
            $('#popup-order-overlay').hide();
            $('#popup-order-wrap').hide();

            return false;
        });

        order.setUrl('{{ path('_ajax_oder_pizza') }}');
        order.setUrlGetItems('{{ path('_ajax_get_pizzas') }}');
        order.setUrlRemoveItem('{{ path('_ajax_remove_item') }}');
    });
</script>