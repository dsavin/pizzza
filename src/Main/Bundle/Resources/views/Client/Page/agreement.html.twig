                        {#{% endif %}#}
                        {#{{ entity.text|raw }}#}
                    {#</div>#}
                {#</div>#}
            {#</div>#}
        </div>
        {% render "MainBundle:PageLayout:sidebar" %}
    </div>
{% endblock %}
