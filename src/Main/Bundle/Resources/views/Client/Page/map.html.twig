{% extends "::base.html.twig" %}

{% block title %}{{ entity.title }}{% endblock %}
{% block description %}{{ entity.description }}{% endblock %}
{% block keywords %}{{ entity.keywords }}{% endblock %}
{% set active = 5 %}

{% block javascripts %}
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
    <style>
        #ui-id-1 {
            overflow-y: scroll;
            max-height: 150px;
        }
    </style>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script>
        var transl = {};
        var translEn = new Array();
        transl['А']='A';     transl['а']='a';
        transl['Б']='B';     transl['б']='b';
        transl['В']='V';     transl['в']='v';
        transl['Г']='G';     transl['г']='g';
        transl['Д']='D';     transl['д']='d';
        transl['Е']='E';     transl['е']='e';
        transl['Ё']='Yo';    transl['ё']='yo';
        transl['Ж']='Zh';    transl['ж']='zh';
        transl['З']='Z';     transl['з']='z';
        transl['И']='I';     transl['и']='i';
        transl['Й']='J';     transl['й']='j';
        transl['К']='K';     transl['к']='k';
        transl['Л']='L';     transl['л']='l';
        transl['М']='M';     transl['м']='m';
        transl['Н']='N';     transl['н']='n';
        transl['О']='O';     transl['о']='o';
        transl['П']='P';     transl['п']='p';
        transl['Р']='R';     transl['р']='r';
        transl['С']='S';     transl['с']='s';
        transl['Т']='T';     transl['т']='t';
        transl['У']='U';     transl['у']='u';
        transl['Ф']='F';     transl['ф']='f';
        transl['Х']='X';     transl['х']='x';
        transl['Ц']='C';     transl['ц']='c';
        transl['Ч']='Ch';    transl['ч']='ch';
        transl['Ш']='Sh';    transl['ш']='sh';
        transl['Щ']='Shh';    transl['щ']='shh';
        transl['Ъ']='"';     transl['ъ']='"';
        transl['Ы']='Y\'';    transl['ы']='y\'';
        transl['Ь']='\'';    transl['ь']='\'';
        transl['Э']='E\'';    transl['э']='e\'';
        transl['Ю']='Yu';    transl['ю']='yu';
        transl['Я']='Ya';    transl['я']='ya';

        $.each(transl, function(k, v){
            translEn[v] = k;
        });

        var chains = [
            {% for chain in chains %}
                {
                    id:   "{{ chain.id }}",
                    label:   "{{ chain.name }}",
                    value:   "{{ chain.name }}"
                },
                {
                    id:   "{{ chain.id }}",
                    label:   translit2En("{{ chain.name }}"),
                    value:   translit2En("{{ chain.name }}")
                },
            {% endfor %}
        ];

        var marks = [
            {% for chain in chains %}
                {% for branch in chain.getBranchsByLocale(_locale) %}
                    {
                        id:   "{{ chain.id }}",
                        lat:   "{{ branch.lat }}",
                        lng:   "{{ branch.lng }}",
                        street:   "{{ branch.street }}",
                        name:   "{{ chain.name }}",
                        name_en:   translit2En("{{ chain.name }}"),
                        path:   "{{ path_city('_branch_single',{'_city':_city,'_locale':_locale,'chain_url':chain.url,'branch_url':branch.url}) }}"
                    },
                {% endfor %}
            {% endfor %}
        ];

        var t;
        var map;
        var installMarks = marks;
        var openedWindow = false;
        var mapOptions = {
            center:new google.maps.LatLng(50.450181,30.523096),
            zoom:13,
            mapTypeId:google.maps.MapTypeId.ROADMAP,
            scrollwheel:false
        };

        function setMap(points)
        {
            var marker;
            $('#map-canvas').html('');
            map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);

            $.each(points, function(index, value) {
                marker = new google.maps.Marker({
                    map:map,
                    position:new google.maps.LatLng(value.lat, value.lng),
                    icon: new google.maps.MarkerImage(
                            '/images/marker.png',
                            new google.maps.Size(27,28)
                    )
                });

                attachSecretMessage(marker, value.street, value.name, value.path);
            });
        }

        function attachSecretMessage(marker, str, chainName, url)
        {
            var infowindow = new google.maps.InfoWindow(
                    {
                        content: '<h3 style="color:#000; font-weight: bold;">'+chainName+'</h3><a href="'+url+'">'+str+'</b>'
                    });

            google.maps.event.addListener(marker, 'click', function () {
                if (openedWindow)
                    openedWindow.close();
                openedWindow = infowindow;
                infowindow.open(map, marker);
                map.setCenter(marker.getPosition());
            });
        }

        function makeNewMap(event, ui)
        {

            var chainName = $("#search-map").val();

            if (ui.item) {
                chainName = ui.item.value;
            }

            var newMarks = [];

            if (chainName == "Название") {
                chainName = "";
            }

            var reg = new RegExp(".*"+chainName+".*");
            var i = 0;
            $.each(installMarks, function(index, value) {
                if (reg.test(value.name) || reg.test(value.name_en)) {
                    newMarks[i] = value;
                    i++;
                }
            });

            clearTimeout(t);
            t = setTimeout(function(){
                setMap(newMarks);
            }, 1000);
        }

        function translit2En(text)
        {
            var trans = transl;
            var result = '';

            if (text.match(/[A-z]/g)) {
                trans = translEn;
            }

            for (i = 0; i < text.length; i++) {
                if (trans[text[i]] != undefined) {
                    result += trans[text[i]];
                } else {
                    result += text[i];
                }
            }

            return result;
        }

        $(document).ready(function(){
            setMap(installMarks);
            $( "#search-map" ).autocomplete({
                source: chains,
                select: makeNewMap,
                focus: makeNewMap,
                response: makeNewMap,
                change: makeNewMap
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div id="main">
        <div class="main">
            <div id="content" class="map-content">
                <div class="heading-page">
                    <ul class="breadcrumbs">
                        <li><a href="/">Главная</a></li>
                        <li>Карта</li>
                    </ul>
                    <div class="gholder">
                        <h1>Все пиццерии на карте Киева</h1>
                        <form action="#" class="search-map" onsubmit="return false;">
                            <fieldset>
                                <label for="search-map">Найти на карте</label>
                                <div class="row">
                                    <input type="text" value="Название" id="search-map" />
                                    <input type="submit" value="Search" />
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <div class="map-page">
                    <div class="placeholder-map">
                        <div id="map-canvas" style="height: 542px; width: 972px;"></div>
                    </div>
                </div>
            </div>
        </div>
        {% if entity.text != '' %}
            <div class="main-text">
                <div class="heading">
                    <h2>О проекте</h2>
                </div>
                <div class="text">
                    {{ entity.text }}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
